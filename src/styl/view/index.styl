body
  background-color $grey-white

div.page-wrapper
  height      auto
  min-height  100%

div.content-wrapper
  margin          0 auto
  padding-top     $header-height
  display         table
  padding-bottom  $footer-height + 50px

div.content
  margin-top 30px
  padding 0 20px

table.header
  white-space       nowrap
  color             white
  position          fixed
  width             100%
  height            $header-height
  background-color  $grey-dark
  mix-user-select(none)

  td.max
    width 99%

  a.menu-button
    height $header-height

  span.menu-title
    line-height $header-height

i.icon
  height $header-height
  font-size 18px

a.menu-button
  font-size       13px
  display         inline-block
  color           $grey-white
  padding         0 10px
  vertical-align  middle
  &:hover
    color white
    background-color $grey

span.app-name
  font-size 16px
