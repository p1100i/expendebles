*
  cursor      default
  margin      0
  padding     0
  font-family sans-serif

html
  height 100%
  color  $grey-dark

body
  height 100%
  background-color $grey-white

h1
  font-size 1.3em

h2
  font-size 1.1em

h3
  font-size 1em

h4
  font-size 0.9em

h5
  font-size 0.8em

a, a *, [data-ng-click], [ng-click]
  cursor pointer

ul
  list-style-type none

a
  text-decoration none

  color       $solarized-6
  font-weight bold
  &:hover
    color     $teal
table
  border-collapse collapse

input[type=text], input[type=password], textarea
  color   $grey
  padding 3px
  border  2px solid $grey
  mix-border-radius(5px)

  &:focus
    color        $grey-dark
    border-color $grey-light

input[type=submit]
  border            0 none
  cursor            pointer
  text-transform    uppercase
