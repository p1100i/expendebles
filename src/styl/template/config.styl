div.config-wrapper
  ul.config-info
    margin-bottom 10px

    span.bubble
      margin 0

    li
      margin 5px 0

    li.next-item
      margin-top 10px

    i
      text-align  center
      width       18px

    button
      width $content-width - 4

  table.serialize
    font-size 14px

  span.count
    font-size 10px

  textarea.serialized
    font-size   10px
    display     block
    width       $content-width - 10px

  button.submit
    margin-top 5px
    size2($content-width / 2, 40px)

  button.submit-wide
    size2($content-width, 40px)
