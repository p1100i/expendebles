div.register-wrapper
  text-align center

  input.sum
    font-size     36px
    margin-bottom 5px
    text-align    center
    size2($content-width - 4, 60px)

  input.datetime
    font-size     12px
    margin-bottom 5px
    width $content-width - 4

  input.submit
    margin 5px 0 10px
    size2($content-width / 4, 40px)

    &.selected
      font-weight bold
      font-size 30px

    &.plus, &.minus
      &:not([disabled])
        font-size 22px

    &.delete:not([disabled])
      color $solarized-5

    &.ext:not([disabled])
      color $solarized-4

    &.plus.selected
      color $solarized-2

    &.minus.selected
      color $solarized-1

  input.submit-wide
    size2($content-width, 40px)
    margin-bottom 10px

  table.control, table.items
    width $content-width

  table.items
    tr
      height 30px

      &.selected
        background-color $solarized-8

        td.amount-cell
          mix-border-tl-radius(10px)
          mix-border-bl-radius(10px)

        td.date-cell
          mix-border-tr-radius(10px)
          mix-border-br-radius(10px)


    td.date-cell
      width 160px

  span.bubble
    mix-border-radius($border-radius)
    margin        0 5px
    padding       1px 6px
    color         white
    font-size     12px
    display       block
    height        18px
    line-height   18px
    text-align    center


  span.category
    width   110px
    display inline-block

  span.date, span.category
    background-color  $solarized-4

  span.expense
    background-color  $solarized-1

  span.income
    background-color  $solarized-2

  span.edit
    background-color  $solarized-8
